<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<LinearLayout
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_c"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="native"
            android:onClick="changeProgress"
            android:layout_margin="10dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/button_r"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="changeProgress"
            android:text="rend"
            android:layout_margin="10dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/button_j"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="java"
            android:layout_margin="10dp"
            android:onClick="changeProgress"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_h"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="横向模糊"
            android:layout_margin="10dp"
            android:onClick="changeProgress"
            android:layout_height="40dp"/>

        <Button
            android:id="@+id/button_v"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="径向模糊"
            android:layout_margin="10dp"
            android:onClick="changeProgress"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_circular"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="旋转模糊"
            android:layout_margin="10dp"
            android:onClick="changeProgress"
            android:layout_height="40dp"/>

        <Button
            android:id="@+id/button_radial"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="辐射模糊"
            android:layout_margin="10dp"
            android:onClick="changeProgress"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_g"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="changeProgress"
            android:text="BoxNative"
            android:layout_margin="10dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/button_change"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="changeImage"
            android:text="换图"
            android:layout_margin="10dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_minus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="-"
            android:onClick="changeIt"
            android:layout_margin="10dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/it"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1"
            android:textColor="#f40"
            android:textSize="30sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/button_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="changeIt"
            android:text="+"
            android:layout_margin="10dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <SeekBar
            android:id="@+id/blur_seekBar"
            android:layout_width="320dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:max="240" />

        <TextView
            android:id="@+id/blur_amount"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="1"
            android:textColor="#f90"
            android:textSize="30sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:scaleType="centerCrop"
        android:src="@drawable/testc"
        android:id="@+id/image"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:scaleType="centerCrop"
        android:src="@drawable/testc"
        android:id="@+id/image_before"/>
</LinearLayout>
</ScrollView>
